description "Grafana"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 10 5

limit nofile unlimited unlimited

console log

exec start-stop-daemon --chuid {{ grafana_user }} --start --exec "{{ grafana_home}}/grafana-{{ grafana_version }}/bin/grafana-server --config={{ grafana_conf_dir }}/grafana.ini --pidfile={{ grafana_pid_dir }}/grafana.pid"